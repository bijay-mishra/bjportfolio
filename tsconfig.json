{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@css/*": [
        "public/css/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@layout/*": [
        "app/layout/*"
      ],
      "@context/*": [
        "app/context/*"
      ],
      "@utility/*": [
        "utility/*"
      ],
      "@lib/*": [
        "lib/*"
      ] // Added path for `lib` folder
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/blog/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
