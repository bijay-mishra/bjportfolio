{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@css/*": [
        "public/css/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@layout/*": [
        "app/layout/*"
      ],
      "@context/*": [
        "app/context/*"
      ],
      "@utility/*": [
        "utility/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "typeRoots": ["./node_modules/@types", "./types"], // Added to include custom type declarations
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts" // Ensure custom types folder is included
  ],
  "exclude": [
    "node_modules"
  ]
}